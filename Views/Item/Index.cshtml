@model IEnumerable<ProjektCRUD.Models.Item>

<div class="container p-3">
     <div class="row pt-4">
          <div class="col-6">
               <h2 class="text-primary">Pożyczone przedmioty</h2>
          </div>
         <div class="col-6 text-right">
             <a asp-controller="Item" asp-action="Create" class="btn btn-secondary">Dodaj przedmiot</a>
         </div>
     </div>
    <br/>

    @if (Model.Count() > 0)  //sprawdzanie czy są dane w BD
    {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Numer
                            </th>
                            <th>
                                Pożyczający
                            </th>
                            <th>
                                Użyczający
                            </th>
                            <th>
                                Przedmiot
                            </th>
                            <th>
                                Ilość
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)     //Model z ItemController.cs, typu Item.cs
                        {
                        <tr>
                            <td width="10%">@item.Id</td>
                            <td width="25%">@item.Borrower</td>
                            <td width="25%">@item.Lender</td>
                            <td width="30%">@item.ItemName</td>
                            <td width="10%">@item.Quantity</td>
                        </tr>
                        }

                    </tbody>
                </table>
    }
    else
    {
        <p>Aktualnie brak zapisanych przedmiotów</p>
    }

</div>